{% assign_local c = "c-text-input" %}
{% if hidden %}
    <input type="hidden" id="{{ id }}" name="{{ id }}" value="{{ placeholder }}">
{% elsif readonly %}
<div class="{{ c }}">
    <label class="{{ c }}__label" for="{{ id }}">{{ label }}{% if required %} *{% endif %}</label>
    <input class="{{ c }}__input {{ c }}__input--readonly"
        type="text" id="{{ id }}" 
        name="{{ id }}" 
        value="{{ placeholder }}"
        readonly
        {% if helper_text %}aria-describedby="{{ id }}--helper"{% endif %}>

    {% if helper_text %}
        {% bookshop "generic/form/helper-text" id={{ id }} helper_text={{ helper_text }} %}
    {% endif %}
</div>
{% else %}
<div class="{{ c }}">
    <label class="{{ c }}__label" for="{{ id }}">{{ label }}{% if required %} *{% endif %}</label>
    <input class="{{ c }}__input"
        onblur="validateInput(this)"
        oninput="validateInputTyping(this)"
        type="text" id="{{ id }}" 
        name="{{ id }}" 
        placeholder="{{ placeholder }}"
        {% if required %}required{% endif %}
        {% if helper_text %}aria-describedby="{{ id }}--helper"{% endif %}>

    {% if helper_text %}
        {% bookshop "generic/form/helper-text" id={{ id }} helper_text={{ helper_text }} %}
    {% endif %}

    {% bookshop "generic/form/error-message" id={{ id }} %}
</div>
{% endif %}